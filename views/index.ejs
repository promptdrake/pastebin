<html>
<head>
  <title>JustPaste</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
 <link href="/./styles.css" rel="stylesheet">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="https://cdn.aisbircubes.my.id/20230828_194611.png" alt="Logo" height="44" class="d-inline-block align-text-top">
      </a>
    </div>
  </nav>
  <div class="container" style="margin-top: 10px;margin-bottom: 20px;">
    <h1 class="titless" style="padding-top: 10px;">< Pastebin /></h1>
    <hr>
    <p>Pasted Text Area for developers or text writers with no login required.</p>
    <p style="margin-top: -16px;">Currently, we have <code id="codes" style="font-size: 15px;">0</code> Paste!</p>
    
    <form action="/postform" method="post">
      <div class="form-group">
        <label class="labels" for="kode">Pasted Here</label>
        <textarea required name="kode" id="kode" placeholder="lorem ipsum dipsum"><%= kode %></textarea>
        <br><br>
        <label class="labels" for="endpoint">Endpoint</label>
        <input id="endpoint" name="endpoint" placeholder="enter your prefix url">
        <code style="padding-top: 10px;">/t/<span id="result"></span></code>
        <br><br>
        <label class="labels" for="endpoint">Password</label>
        <input name="password" type="password" maxlength="10" placeholder="enter your password, left empty if no password">
      </div>
      <button class="submit-btn" type="submit">Submit</button>
    </form>
    <p class="footer">Created With ❤️ By Aisbirkun</p>
  </div>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function() {
    const endpointInput = document.getElementById('endpoint');
    const resultSpan = document.getElementById('result');

    endpointInput.addEventListener('input', function() {
      resultSpan.textContent = endpointInput.value;
      
      if (!endpointInput.value) {
        resultSpan.textContent = '${RandomUUID}';
      }
    });
  });
  </script>
  <script>
    function updatePasteValue() {
    var pasteElement = document.getElementById('codes');
    var count = 0;
    var targetValue = <%= paste %>;
    var intervalId = setInterval(function() {
      count++;
      pasteElement.innerText = count;

      if (count >= targetValue) {
        clearInterval(intervalId);
       console.log('Paste Count: '+targetValue)
      }
    }, 50);
  }
  updatePasteValue();
  </script>
</html>
